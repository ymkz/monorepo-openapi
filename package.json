{
  "name": "@monorepo-openapi/root",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "pnpm --recursive run dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test",
    "typecheck": "pnpm --recursive run typecheck",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "generate": "pnpm --recursive run /^generate:.*/",
    "update": "pnpm update --recursive --latest --interactive",
    "openapi:spec": "serve apps/spec -p 9000",
    "openapi:mock": "prism mock apps/spec/openapi.yaml -p 9001"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@dotenvx/dotenvx": "1.33.0",
    "@hey-api/openapi-ts": "0.62.1",
    "@remix-run/dev": "2.15.2",
    "@stoplight/prism-cli": "5.12.0",
    "@types/node": "22.10.7",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "autoprefixer": "10.4.20",
    "knip": "5.42.1",
    "orval": "7.4.1",
    "pkgroll": "2.6.1",
    "postcss": "8.5.1",
    "serve": "14.2.4",
    "tailwindcss": "3.4.17",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vite": "5.4.11",
    "vitest": "2.1.8"
  }
}
