{
  "name": "@monorepo-openapi/root",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "pnpm --recursive run dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test",
    "typecheck": "pnpm --recursive run typecheck",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "generate": "pnpm --recursive run /^generate:.*/",
    "update": "pnpm update --recursive --latest --interactive",
    "openapi:spec": "serve apps/spec -p 9000",
    "openapi:mock": "prism mock apps/spec/openapi.yaml -p 9001"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@dotenvx/dotenvx": "1.9.1",
    "@hey-api/openapi-ts": "0.52.9",
    "@kubb/cli": "2.25.1",
    "@kubb/core": "2.25.1",
    "@kubb/plugin-oas": "2.25.1",
    "@kubb/swagger": "2.25.1",
    "@kubb/swagger-ts": "2.25.1",
    "@kubb/swagger-zod": "2.25.1",
    "@remix-run/dev": "2.11.2",
    "@stoplight/prism-cli": "5.9.0",
    "@types/node": "22.5.0",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "knip": "5.27.3",
    "pkgroll": "2.4.2",
    "poku": "2.5.0",
    "postcss": "8.4.41",
    "serve": "14.2.3",
    "tailwindcss": "3.4.10",
    "tinyspy": "3.0.0",
    "tsx": "4.17.0",
    "typescript": "5.5.4",
    "vite": "5.4.2"
  }
}
