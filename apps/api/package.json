{
  "name": "@monorepo-openapi/api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "dotenvx run -f .env.local -- tsx watch --clear-screen=false app/server.ts",
    "build": "pkgroll --src=app --dist=build",
    "start": "node build/server.mjs",
    "test": "dotenvx run -f .env.test -- poku",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "format": "biome check --write",
    "generate:kubb": "kubb generate",
    "generate:sqlc": "sqlc generate && biome check --write app/gateway/datasource"
  },
  "dependencies": {
    "@hono/node-server": "1.12.0",
    "@hono/zod-validator": "0.2.2",
    "@t3-oss/env-core": "0.11.0",
    "hono": "4.5.4",
    "pino": "9.3.2",
    "postgres": "3.4.4",
    "temporal-polyfill": "0.2.5",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@kubb/cli": "2.25.1",
    "@kubb/core": "2.25.1",
    "@kubb/plugin-oas": "2.25.1",
    "@kubb/swagger": "2.25.1",
    "@kubb/swagger-ts": "2.25.1",
    "@kubb/swagger-zod": "2.25.1",
    "pkgroll": "2.4.2",
    "tsx": "4.17.0"
  },
  "module": "build/server.mjs"
}
